<%= render :partial => "header_view/header_admin" %>

<main>
	<div class="main_wrapper">
  	<ul class="controls_ul clearfix">
		  <li><%= link_to image_tag("view2x.png")+"View",  rooms_path, class:"button_control" %></li>
		  <li><%= link_to image_tag("edit2x.png")+"Edit", edit_room_path(2), class:"button_control", id:"edit" %></li>
			<li><%= link_to image_tag("delete2x.png")+"Delete",  rooms_path, method: :delete, data: {confirm: 'Â¿Do you want to delete this room?'}, class:"button_control" %></li>
			<li class="last_button_control"><%= link_to image_tag("add2x.png")+"Add participant", new_participant_path, class:"button_control" %></li>
		</ul>

  	<div class="table-wrapper checkbox">
  	<table>
			<tr>
				<th></th>
			  <th>First Name</th>
			  <th>Last Name</th>
			  <th>Phone Number</th>
			  <th>Email</th>
			</tr>
			<% @participants.each do |participant| %>
				<tr>
					<td><%= radio_button_tag "participant", participant.id, class:"", id: participant.id %></td>
					<td><%= participant.first_name %></td>
					<td><%= participant.last_name %></td>
					<td><%= participant.phone %></td>
					<td><%= participant.email %></td>
				</tr>
			<% end %>
		</table>
	
		<% if @participants.blank? %>
			<h2>There are no participants saved</h2>
		<% end %>
	
	</div> <!-- .table-wrapper -->
	</div><!-- .main_wrapper -->
</main>