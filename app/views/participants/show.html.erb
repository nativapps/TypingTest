<%= render :partial => "header_view/header_admin" %>

<main>
    <div class="main_wrapper">

	<ul class="clearfix">
		<li><%= link_to image_tag("back2x.png")+"Go back", participants_path, class:"button_control" %></li>
		<li><%= link_to image_tag("edit2x.png")+"Edit", edit_participant_path(@participant), class:"button_control" %></li>
		<li><%= link_to image_tag("delete2x.png")+"Delete",  @participant, method: :delete, data: {confirm: 'Â¿Do you want to delete this participant?'}, class:"button_control" %></li>
	</ul>

      <section class="sub_main">
        <h4>PARTICIPANT INFORMATION </h4>
        <table>
          <tr>
            <td><strong>First Name:</strong>  <%= @participant.first_name %></td>
            <td><strong>Last Name:</strong>  <%= @participant.last_name %></td>
            <td><strong> Identification:</strong>  <%= @participant.identification %></td>
          </tr>

          <tr>
            <td><strong>Phone Number:</strong> <%= @participant.phone %></td>
            <td><strong>Email:</strong> <%= @participant.email %></td>
            <td></td>
          </tr>
        </table>
      </section>

      <section class="sub_main">
        <h4>ROOMS</h4>

        <div class="table-wrapper">
		  <table>
		  	<% @participant.rooms.each do |room| %>
            <tr>
              <td><strong>Room Name:</strong> <%= room.name %></td>
              <td><strong>Start Date:</strong> <%= room.start_date %></td>
              <td><strong> Finish Date:</strong>  <%= room.finish_date %></td>
            </tr>
			
            <tr>
              <td><strong>Tried Times:</strong> <%= room.tried_times %></td>
              <td><strong>Limit Time:</strong> <%= room.set_limit %></td>
              <td><strong>Created Date:</strong><%= room.created_at %></td>
			</tr>
			<% end %>
		  </table>
		
		  <% if @participant.rooms.blank? %>
		  	<h2>There are no room assigned</h2>
	 	  <% end %>
  


        </div> <!-- .table-wrapper -->
      </section>

    </div><!-- .main_wrapper -->
  </main>