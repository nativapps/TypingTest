
<%= render :partial => "header_view/header_admin" %>

<main>
	<div class="main_wrapper">
	<ul class="controls_ul clearfix" >
	<li><%= link_to image_tag("view2x.png")+"View",  rooms_path, class:"button_control" %></li>
	<li><%= link_to image_tag("edit2x.png")+"Edit", edit_room_path(2), class:"button_control", id:"edit" %></li>
	<li><%= link_to image_tag("delete2x.png")+"Delete",  rooms_path, method: :delete, data: {confirm: '¿Do you want to delete this room?'}, class:"button_control" %></li>
	<li class="last_button_control"><%= link_to image_tag("add2x.png")+"Add room", new_room_path, class:"button_control" %></li>
</ul>
	<div class="table-wrapper checkbox">
	<table>
		<tr>
			<th></th>
			<th>Name</th>
			<th>Start Date</th>
			<th>Finish Date</th>
			<th>Tried Times</th>
			<th>Limit</th>
			<th></th>
		</tr>

		<% @rooms.each do |room| %>
			<tr>
				<td><%= radio_button_tag "room", room.id, class:"button", id: room.id %></td>
				<td><%= room.name %></td>
		  		<td><%= room.start_date %></td>
		  		<td><%= room.finish_date %></td>
		  		<td><%= room.tried_times %></td>
				<td><%= room.set_limit %> segundos</td>
				<td>
					<%= link_to image_tag("view2x.png")+"View",  room, class:"button_control" %>
					<%= link_to image_tag("edit2x.png")+"Edit", edit_room_path(room), class:"button_control", id:"edit" %>
					<%= link_to image_tag("delete2x.png")+"Delete",  room, method: :delete, data: {confirm: '¿Do you want to delete this room?'}, class:"button_control" %>
				</td>
			</tr>
		<% end %>

		</table>

		<% if @rooms.blank? %>
			<h2>There are no rooms saved</h2>
		<% end %>
	</div> <!-- .table-wrapper -->
	</div><!-- .main_wrapper -->
</main>
