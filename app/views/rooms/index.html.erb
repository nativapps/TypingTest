		<% @rooms.each do |room| %>
			<tr>
				<td><input type="checkbox" name="" value=""></td>
				<td><%= room.name %></td>
		  	<td><%= room.start_date %></td>
		  	<td><%= room.finish_date %></td>
		  	<td><%= room.tried_times %></td>
				<td><%= room.set_limit %> segundos</td>
			</tr>
		<% end %>

		</table>
	</div> <!-- .table-wrapper -->
	</div><!-- .main_wrapper -->
