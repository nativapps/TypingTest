
	<h2>Rooms session</h2>

	<%= link_to "Add room", new_room_path(@room), class: 'btn btn-primary' %>

	<br>

	<table class="room_table">
			<tr>
					<th>Name</th>
					<th>Start date</th>
					<th>Finish date</th>
					<th>Tried times</th>
					<th>Set limit</th>
					<th>Option</th>
			</tr>
		
			<% @rooms.each do |room| %>
					<tr>
						<td><%= room.name %></td>
						<td><%= room.start_date %></td>
						<td><%= room.finish_date %></td>
						<td><%= room.tried_times %></td>
						<td><%= room.set_limit %></td>

						<td>
							<%= link_to "Ver", room, class: 'btn btn-primary' %>
							<%= link_to "Modificar", edit_room_path(room), class: 'btn btn-primary' %>
							<%= link_to "Eliminar", room, method: :delete, data: {confirm: 'Â¿Esta seguro de eliminar esta sala?'}, class: 'btn btn-danger' %>
						</td> 
					</tr>
			<% end %>
	</table>