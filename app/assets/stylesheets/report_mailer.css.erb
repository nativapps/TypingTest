@charset "UTF-8";
/* CSS Document */
h2, h3, h4, h5, h6 {
  color:#3E3E3E;
}

div.fondo_email {
  width: 100vw;
  height: 258px;
  background-image: url(<%= asset_path('fondo_login.png')%>);
  background-size: cover;
  background-position: center bottom;
  background-color: white;
  clip-path: polygon(0 0, 100% 0%, 100% 84.5%, 0 100%);
  -webkit-clip-path:polygon(0 0, 100% 0%, 100% 84.5%, 0 100%);
}

div.fondo_email img {

  position: absolute;
  top: 38px;
  left: 50%;
  transform: translateX(-50%);
}

div.main_wrapper_email {
    max-width: 600px;
  margin: 0 auto;
  padding: 0 20px;
  z-index: 99;
}

section.test_result_email {
  width: 90%;
  max-width: 540px;
  height: auto;
  position: absolute;
  top:100px;
  left:50%;
  transform: translateX(-50%);
  background-color: white;
  border-radius: 10px;
  box-shadow: 0px 3px 30px rgba(0,0,0,0.1);
  margin: 0 auto;
  overflow: hidden;
  border: solid 1px #E1E1E1;
  text-align: center;
  padding:40px 26px 0 26px;
  margin-bottom: 50px;
}

.test_result_email h3 {
margin-bottom: 45px;
}

div.points_email {
  display: inline-block;
  text-align: center;
  width: 84px;
  border: solid 1px #E1E1E1;
  border-radius: 10px;
  margin: 0 5px 10px 5px;
  overflow: hidden;
}

div.points_email p {
  padding: 4px 0;
  background-color: #F6F4F4;
}

div.points_email h2 {
  padding: 15px 0;
}


div.wrapper_bar_email {
  max-width: 590px;
  text-align: left;
  margin: 40px auto;
  border-radius: 5px;
  margin-bottom: 85px;

}

div.wrapper_bar_email h4{
margin-bottom: 15px;
}

div.wrapper_bar_email h4 span {
color: #FFA64D;
}


.result_bar_email {
  width:100%;
  height: 67px;;
  border-radius: 5px;
  /overflow: hidden;
  border: solid 1px #E1E1E1;
  position: relative;
}

.result_bar_email .measurement_email {
  float: left;
  width: 20%
}


.result_bar_email .measurement_email p{
padding: 5px 0 5px 5px;
font-size: 12px;
}

.result_bar_email .measurement_email span {
  display:block;
  width:100%;
  padding: 12px 0;
  text-align: center;
  color: white;
  font-size: 13px;
}


.result_bar_email .measurement_email:nth-child(1) span {
  background-color: #FFCA8C;

  border-top-left-radius: 5px;
}
.result_bar_email .measurement_email:nth-child(2) span{
  background-color: #FFBA6F;
}
.result_bar_email .measurement_email:nth-child(3) span{
  background-color: #FFA64D;
}
.result_bar_email .measurement_email:nth-child(4) span {
  background-color: #FF9028;
}
.result_bar_email .measurement_email:nth-child(5) span {
  background-color: #FF7801;
  border-top-right-radius: 5px;
}

div.result_email {
  height: 40px;
  border-radius: 5px;
  background-color: #FFA64D;
  position: absolute;
  top: 55px;
  margin-left: -20px;
  text-align: center;
  vertical-align: middle;
  padding-top: 9px;
}

div.result_email  h3 {
  color: white;
}

div.result_email ::before {
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  top: -7px;
  border-left: 7px solid transparent;
  border-right: 7px solid transparent;
  border-bottom:7px solid #FFA64D;
}
